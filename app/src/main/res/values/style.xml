<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RachelBottomDialog" parent="Theme.Design.BottomSheetDialog" >
        <item name="bottomSheetStyle">@style/RachelBottomDialogWrapper</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="RachelBottomDialogWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="RachelButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/base</item>
        <item name="android:textColor">@color/white</item>
        <item name="sCornersRadius">10dp</item>
        <item name="sSelectorDisableColor">@color/light_gray</item>
        <item name="sSelectorNormalColor">@color/steel_blue</item>
        <item name="sSelectorPressedColor">@color/steel_blue_pressed</item>
        <item name="sUseSelector">true</item>
        <item name="sGravity">center</item>
    </style>
    <style name="RachelSettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="sLeftTextSize">@dimen/sm</item>
        <item name="sLeftTextColor">@color/black</item>
        <item name="sLeftTextIsBold">true</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sLeftViewMarginLeft">10dp</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">10dp</item>
        <item name="sCenterViewMarginRight">10dp</item>
        <item name="sRightTextSize">@dimen/sm</item>
        <item name="sRightTextColor">@color/gray</item>
        <item name="sRightViewMarginLeft">5dp</item>
        <item name="sRightViewMarginRight">5dp</item>
        <item name="sRightIconRes">@drawable/svg_expand_gray</item>
    </style>
    <style name="RachelText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sm</item>
    </style>
    <style name="RachelText.X">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="RachelText.X0">
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="RachelText.HyperLink">
        <item name="android:textColor">@color/hyperlinks</item>
    </style>
    <style name="RachelText.Image">
        <item name="android:gravity">center</item>
    </style>
    <style name="RachelCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">5dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="RachelRoundImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="riv_is_circle">true</item>
    </style>
    <style name="RachelGroupItem">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="RachelGroupItem.X">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RachelGroupItem.Y">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>
</resources>