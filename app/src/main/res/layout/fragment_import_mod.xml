<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:background="@color/white"
    tools:context=".fragment.FragmentImportMod">
    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/tv_res" />
    <TextView
        android:id="@+id/tv_res"
        style="@style/RachelText"
        android:text="Loading: " />
    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:progress="0" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_percent"
            style="@style/RachelText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="0 %" />
        <TextView
            android:id="@+id/tv_cur_num"
            style="@style/RachelText"
            app:layout_constraintRight_toLeftOf="@id/tv_separator"
            app:layout_constraintTop_toTopOf="parent"
            android:text="0" />
        <TextView
            android:id="@+id/tv_separator"
            style="@style/RachelText"
            app:layout_constraintRight_toLeftOf="@id/tv_total_num"
            app:layout_constraintTop_toTopOf="parent"
            android:text=" / " />
        <TextView
            android:id="@+id/tv_total_num"
            style="@style/RachelText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="10dp"
        android:paddingVertical="9dp"
        android:text="导入"
        android:textSize="@dimen/base"
        android:background="@color/steel_blue" />
</LinearLayout>