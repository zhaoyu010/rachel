<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragment.FragmentPlaylist" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >
        <TextView
            style="@style/RachelText.X0"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:text="歌单"
            android:textColor="@color/steel_blue"
            android:textSize="@dimen/xxxl" />
        <TextView
            android:id="@+id/button_add"
            style="@style/RachelText.Image"
            android:layout_marginEnd="10dp"
            app:drawableTopCompat="@drawable/svg_add_blue"
            android:text="创建" />
        <TextView
            android:id="@+id/button_upload"
            style="@style/RachelText.Image"
            android:layout_marginEnd="10dp"
            app:drawableTopCompat="@drawable/svg_upload_blue"
            android:text="云备份" />
        <TextView
            android:id="@+id/button_download"
            style="@style/RachelText.Image"
            android:layout_marginEnd="10dp"
            app:drawableTopCompat="@drawable/svg_download_blue"
            android:text="云还原" />
    </LinearLayout>
    <com.xuexiang.xui.widget.tabbar.TabSegment
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/bg_tab_panel"
        app:ts_has_indicator="true"
        app:ts_mode="scrollable"
        app:ts_space="20dp"
        app:ts_normal_color="@color/black"
        app:ts_selected_color="@color/steel_blue" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>